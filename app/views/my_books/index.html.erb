<p id="notice"><%= notice %></p>

<h1>Listing My Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Publisher</th>
      <th>Publish date</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @my_books.each do |my_book| %>
      <tr>
        <td><%= my_book.book_name %></td>
        <td><%= my_book.author %></td>
        <td><%= my_book.price %></td>
        <td><%= my_book.company %></td>
        <td><%= my_book.sales_day %></td>
        <td><center><img src="<%= my_book.picture %>" alt="railsの本" width="30%" height="30%"></center></td>
                <td><%= image_tag(my_book.picture) %></td>
        <td><%= link_to 'Show', my_book %></td>
        <td><%= link_to 'Edit', edit_my_book_path(my_book) %></td>
        <td><%= link_to 'Destroy', my_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

